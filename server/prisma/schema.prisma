// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String   @db.VarChar(255)
  description  String?
  apiEndpoint  String
  apiConfig    Json
  themeConfig  Json
  visibility   Boolean
  domainConfig Json
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      Int
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  projects  Project[]
  token     String
}
